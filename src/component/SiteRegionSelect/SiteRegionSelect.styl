.region-select
    display none
    height 40px
    line-height 40px
    .region-select-button
        cursor pointer
        position relative
        .button-flag
            line-height 23px
            height 23px
            width 23px
            position absolute
            left 0px
            top 9px
            border-radius 100%
        .button-text
            font-size 12px
            font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif
            padding-left 32px
            display inline-block


.site-region-overlay
    position absolute
    top 40px
    left 0px
    right 0px
    bottom 0px
    z-index 9
    background rgba(255,255,255,.6)
.site-region-panel
    width 360px
    height 723px
    position absolute
    top 45px
    left 50%
    margin-left -490.5px
    border-radius 5px
    z-index 99
    background white
    box-shadow 0px 2px 5px 1px rgba(0,0,0,.2)
    .panel-close-button
        height 50px
        width 50px
        line-height 60px
        text-align center
        float right 
        cursor pointer
    h1
        font-family: 'DubielItalic';
        font-weight: normal;
        font-style: normal;
        font-size 24px
        text-transform uppercase
        padding 0px
        margin 0px
        padding-left 20px
        padding-top 5px
        padding-bottom 25px
        color #030304
    .panel-active
        font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif;
        font-size 12px
        margin-left 20px
        margin-right 20px
        padding-left 42px
        padding-bottom 15px
        position relative
        border-bottom 1px solid gainsboro
        .active-flag
            height 26px
            width 26px
            position absolute
            left 0px
            top 50%
            margin-top -21px
            border-radius 100%
    .panel-search
        text-align center
        padding-top 18px
        padding-bottom 15px
        position relative
        .search-form
            display inline-block
            .form-icon
                height 40px
                width 40px
                position absolute
                left 20px
                top 50%
                margin-top -20px
                background pink           
                background url('fontawesome-search-black.svg') center 40%/20px no-repeat;
            input[type="text"]     
                font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif;
                font-size 14px
                padding 0px
                width 270px
                padding-left 50px
                height 50px
                border 1px solid gainsboro
                transition-property border
                transition-duration 0.4s
                transition-timing-function ease-out
                transition-delay 0s
                outline none
                color black
    .panel-region-list
        height 501px
        overflow hidden
        position relative
        .list-scroll            
            position absolute
            top 0px
            left 0px
            right 0px
            bottom 0px
            overflow-x scroll
            .scroll-item
                font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif
                height 40px
                line-height 40px
                padding-left 55px
                padding-right 25px
                cursor pointer
                position relative
                .item-image
                    height 23px
                    width 23px
                    border-radius 100%
                    background-size cover
                    background-position center center
                    position absolute
                    left 20px
                    top 50%
                    margin-top -11.5px
                .item-label
                    font-size 12px
                    float left
                    color  #030304;
                .item-currency
                    font-size 11.5px
                    float right
                    color #A0A7AB
            .scroll-item:hover
                background-color: rgba(179, 212, 252, 0.2);

