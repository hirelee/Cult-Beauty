.header
    width 100%
    position relative  
    .header-container
        width 1000px
        margin auto
        position relative
        .header-site-logo
            position absolute
            top 50%
            left 0px
            margin-top -48px
            height 90px
            width 115px
            background-size cover
            background-position center center
            background-image url('site-logo.png')
        .header-account-menu
            float right
            ol
                list-style none
                li
                    font-size 13px
                    font-weight lighter
                    text-decoration underline
                    font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif;
                    display inline-block
                    margin-left 10px
                    padding-left 20px
                    position relative
                    color #000000
                    .menu-icon
                        height 12px
                        width 12px
                        position absolute
                        left 0px
                        top 0px
                    .menu-icon-user
                        height 11px
                        width 10px
                        background url('user-grey.svg') center 40%/20px no-repeat;
                        background-size cover
                    .menu-icon-heart
                        background url('heart-grey.svg') center 40%/20px no-repeat;
                        background-size cover
                    .menu-icon-logout
                        background url('logout-grey.svg') center 40%/20px no-repeat;
                        background-size cover
                .menu-greeting
                    font-size 26px
                    font-family 'JennaSue'
                    text-decoration none
                    padding-right 10px
                    color #000000
                    opacity 0.8
        .header-bag-count
            width 140px
            padding-top 0px
            padding-bottom 10px
            float right
            position relative
            .count-icon
                width 42px
                position relative
                .count-icon-number
                    font-family 'DubielItalic'
                    font-size 25px
                    text-align center
                    position absolute
                    height 50px
                    top 50%
                    margin-top -8px
                    left 0px
                    right 0px
                    color white
            .count-text
                text-align center
                position absolute
                top 12px
                left 54px
                .text-large
                    font-size 23px
                    line-height 20px
                    border-bottom 2px solid black
                    font-family 'DubielItalic'
                .text-small
                    font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif;
                    font-size 9px
                    padding-top 4px
