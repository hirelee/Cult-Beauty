                        background-size cover
                    .link-youtube
                        height 23px
                        width 21px
                        background url('social-youtube.svg') center 40%/20px no-repeat;
                        background-size cover
                .social-column
                    font-size 12px
                    font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif;
                    font-weight 200
                    padding-right 30px
                    padding-top 25px
                    padding-bottom 25px
                    float left
                    div
                        cursor pointer
                        padding-bottom 8px
                    div:hover
                        text-decoration underline
