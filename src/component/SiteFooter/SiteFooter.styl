                        background url('social-twitter.svg') center 40%/20px no-repeat;
                        background-size cover
                    .link-pinterest
                        height 22px
                        width 18px
                        background green
                        background url('social-pinterest.svg') center 40%/20px no-repeat;
                        background-size cover
                    .link-instagram
                        height 20px
