.account-menu
    width 220px
    padding-bottom 20px
    border-right 1px solid #e9e9e9
    h2 
        font-family "DubielItalic"
        font-style italic
        font-weight 200
        font-size 24px 
        padding 0px
        margin 0px
        padding 10px
    ol   
        display block
        list-style none
        margin 0px
        padding 0px
        background-color #f8f8f8
        li
            font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif, "Times New Roman", Times, serif
            font-weight 400
            text-transform uppercase
            word-spacing 1px
            letter-spacing 0px
            font-size 12px
            height 40px
            line-height 40px
            padding-left 5px
            cursor pointer
            border-top 1px solid #e9e9e9
            color black
        li:hover
            text-decoration underline
        li:active, .li-active
            font-weight bold
